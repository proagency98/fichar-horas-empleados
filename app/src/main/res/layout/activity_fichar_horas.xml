<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_all_app"
    android:gravity="center"
    android:orientation="vertical"
    android:scrollbarThumbHorizontal="@drawable/background_all_app">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="367dp"
        android:layout_height="120dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/fondocuadro"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imagenUser3"
            android:layout_width="99dp"
            android:layout_height="94dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="13dp"/>

        <TextView
            android:id="@+id/txt_fechaBienvenido"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:layout_marginLeft="138dp"
            android:background="@drawable/fondostextview"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Fecha Actual"
            android:textColor="#F1F8F1"
            android:textSize="15sp"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/txt_bienvenidoNombre"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="-45dp"
            android:background="@drawable/fondostextview"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Bienvenido"
            android:textColor="#F1F8F1"
            android:textSize="15sp" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/fondocuadroregistrohoras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/boton_guardar2"
            android:layout_width="258dp"
            android:layout_height="77dp"
            android:layout_marginHorizontal="65dp"
            android:layout_marginTop="435dp"
            android:background="@drawable/fondo_botones_fichar"
            android:gravity="center"
            android:text="GUARDAR"
            android:textColor="#333030"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/txt_registro_entrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="70dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:hint="00:00:00"
            android:text=""

            android:textAlignment="center"
            android:textSize="40dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/txt_resultadoHoras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="120dp"
            android:hint="00:00:00"
            android:text=""

            android:textAlignment="center"
            android:textSize="40dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/txt_registro_entrada3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="155dp"
            android:text="Total Jornada"
            android:textColor="#F1F8F1"
            android:textSize="30sp"
            android:textStyle="bold"
             />

        <TextView
            android:id="@+id/txt_registro_salida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginVertical="70dp"
            android:hint="00:00:00"
            android:text=""
            android:textAlignment="center"
            android:textSize="40dp"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/boton_guardar"
            android:layout_width="258dp"
            android:layout_height="77dp"
            android:layout_marginHorizontal="65dp"
            android:layout_marginTop="435dp"
            android:background="@drawable/fondo_botones_fichar"
            android:gravity="center"
            android:text="GUARDAR"
            android:textColor="#333030"
            android:textSize="35dp" />

        <Button
            android:id="@+id/btn_entrar"
            android:layout_width="150dp"
            android:layout_height="77dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="335dp"
            android:background="@drawable/fondo_botones_fichar"
            android:text="Entrar"
            android:textColor="#333030"
            android:textSize="35dp" />


        <Button
            android:id="@+id/btn_salir"
            android:layout_width="150dp"
            android:layout_height="77dp"
            android:layout_marginHorizontal="220dp"
            android:layout_marginTop="335dp"
            android:background="@drawable/fondo_botones_fichar"
            android:text="Salir"
            android:textColor="#333030"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="10dp"
            android:text="Jornada Laboral"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#F1F8F1"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="305dp"
            android:backgroundTint="#000000"
            android:background="?android:attr/listDivider" />

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="210dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#000000" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="140dp"
            android:backgroundTint="#000000"
            android:background="?android:attr/listDivider" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="57dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#000000" />

        <View
            android:id="@+id/divider3"
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="195dp"
            android:layout_marginVertical="70dp"
            android:backgroundTint="#000000"

            android:background="?android:attr/listDivider" />


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
